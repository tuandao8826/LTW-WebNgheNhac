@model IEnumerable<WebNgheNhac.Models.CaSi>

@{
    ViewBag.Title = "Nghệ sĩ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-main">

    <h2>Tổng quan về Nghệ sĩ</h2>

    <p>
        @Html.ActionLink("Thêm ca sĩ", "Create", null, new { @class = "m-b-24px info-btn edit-submit__btn" })
    </p>

    <table class="table">
        <tr>
            <th>
                ID
            </th>
            <th>
                Họ tên
            </th>
            <th>
                Giới tính
            </th>
            <th>
                Lệnh
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCaSi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.IdCaSi }, new { @class = "link-btn" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.IdCaSi }, new { @class = "link-btn" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IdCaSi }, new { @class = "link-btn" })
                </td>
            </tr>
        }
    </table>
</div>