@model WebNgheNhac.Models.CaSi

@{
    ViewBag.Title = "Chỉnh sửa nghệ sĩ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-main">

    <h2>Chỉnh sửa thông tin nghệ sĩ</h2>

    @using (Html.BeginForm("Edit", "Singers", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="edit">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdCaSi)

            <div class="edit__box">
                @Html.LabelFor(model => model.HoTen, "Họ và tên", htmlAttributes: new { @class = "edit__box-label" })
                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "edit__box-input" } })
                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
            </div>

            <div class="edit__box">
                @Html.LabelFor(model => model.NgaySinh, "Ngày sinh", htmlAttributes: new { @class = "edit__box-label" })
                <input class="edit__box-input" type="date" name="NgaySinh" id="NgaySinh" value="@Model.NgaySinh" />
            </div>

            <div class="edit__box">
                @Html.LabelFor(model => model.GioiTinh, "Giới tính", htmlAttributes: new { @class = "edit__box-label" })
                <select id="GioiTinh" name="GioiTinh" class="edit__box-selecet">
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                </select>
            </div>

            <div class="edit__box">
                @Html.LabelFor(model => model.GioiThieu, "Giới thiệu", htmlAttributes: new { @class = "edit__box-label" })
                @Html.EditorFor(model => model.GioiThieu, new { htmlAttributes = new { @class = "edit__box-input" } })
                @Html.ValidationMessageFor(model => model.GioiThieu, "", new { @class = "text-danger" })
            </div>

            <div class="edit__box">
                @Html.LabelFor(model => model.HinhCaSi, "Hình ca sĩ", htmlAttributes: new { @class = "edit__box-label" })
                @Html.DisplayFor(model => model.HinhCaSi, new { htmlAttributes = new { @class = "form-control" } })
                <div></div>
                <input type="file" name="HinhCaSi" id="HinhCaSi" style="font-size: 1.6rem;" />
                @Html.ValidationMessageFor(model => model.HinhCaSi, "", new { @class = "text-danger" })
            </div>
            <div class="edit-submit">
                @Html.ActionLink("Hủy", "Index", null, new { @class = "info-btn" })
                <input type="submit" value="Lưu" class="edit-submit__btn" />
            </div>
        </div>
    }
</div>
