@model IEnumerable<WebNgheNhac.Models.TaiKhoan>

@{
    ViewBag.Title = "Tài khoản người dùng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-main">
    <h2>Tài khoản người dùng</h2>
    <div class="info-content">
        <table class="table">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Tài khoản
                </th>
                <th>
                    Họ tên
                </th>
                <th>
                    Giới tính
                </th>

                <th>
                    Email
                </th>
                <th>
                    Lệnh
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.IdTaiKhoan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoTen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GioiTinh)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.IdTaiKhoan }, new { @class = "link-btn" }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.IdTaiKhoan }, new { @class = "link-btn" }) |

                        @if (item.CheckTk == null)
                        {
                            @Html.ActionLink("Khóa", "LookUp", new { id = item.IdTaiKhoan }, new { @class = "link-btn" })
                        }
                        else
                        {
                            @Html.ActionLink("Mở khóa", "UnLook", new { id = item.IdTaiKhoan }, new { @class = "link-btn unlook" })
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>